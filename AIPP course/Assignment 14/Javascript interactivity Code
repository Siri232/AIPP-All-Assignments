rom flask import Flask, request
app = Flask(__name__)

html = """
<!DOCTYPE html>
<html>
<body>
<form id="f" method="post">
  <input id="u" name="user" placeholder="Username"><br>
  <input id="p" name="pass" type="password" placeholder="Password"><br>
  <div id="e" style="color:red;">{msg}</div>
  <button type="submit">Login</button>
</form>
<script>
document.getElementById('f').onsubmit=function(ev){
  ev.preventDefault();
  let u=document.getElementById('u').value.trim(),
      p=document.getElementById('p').value.trim(),
      e=document.getElementById('e');
  if(!u||!p){e.textContent="Both username and password are required.";}
  else{this.submit();}
};
</script>
</body>
</html>
"""

@app.route("/", methods=["GET","POST"])
def index():
    msg=""
    if request.method=="POST":
        u=(request.form.get("user") or "").strip()
        p=(request.form.get("pass") or "").strip()
        if not u or not p:
            msg="Both username and password are required."
        else:
            print("Logged in user:", u)
            msg=f"Welcome, {u}!"
    return html.format(msg=msg)

if __name__ == "__main__":
    app.run(debug=True)